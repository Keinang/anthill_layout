<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <%= t('users_management') %>
            <span class="badge"><%= @users_all.length %></span>
        </h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-3 col-sm-6 col-xs-12">
                <%= render 'author/author/ibox_new', url: new_user_registration_path %>
            </div>
            <% render_loop(@users, 'user') %>
        </div>
    </div>
    <div class="panel-footer text-center">
        <%= will_paginate @users %>
    </div>
</div>