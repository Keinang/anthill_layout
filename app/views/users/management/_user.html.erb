<div class="col-lg-3 col-sm-6 col-xs-12">
    <%= render 'author/author/ibox_edit',
               item_type: 'edit',
               item_box: item.author_site_storages.length > 0 ? 'bg-green' : 'bg-gray',
               item: item,
               item_title: item.email,
               item_edit_path: author_edit_user_path(item),
               item_destroy_path: author_destroy_user_path(item),
               item_info: item.author_site_storages.length,
               item_icon: 'glyphicon-user' %>
</div>