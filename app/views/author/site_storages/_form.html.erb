<%= form_for(item) do |f| -%>
    <% content = item.get_activated.content rescue nil %>
    <%= render_notification(item) -%>
    <%= render_text_field(f, :key, !item.key.nil?) -%>
    <%= render_text_area_tag(:content, content, true)  unless action_name == 'new' -%>
    <%= render_json(content, '.json-view') unless content.nil? %>
    <%= render_checkbox(f, :publish) -%>
    <%= render_checkbox(f, :public) -%>
    <%= render_collection(f, 'Type', {
                                   id: :site_type_id,
                                   collection: types,
                                   index: :id,
                                   value: :name
                           }) -%>

    <%= render_activated_version(f) -%>
    <%= render_widgets unless action_name == 'new' %>
    <%= render_submit(f) -%>

<% end -%>
