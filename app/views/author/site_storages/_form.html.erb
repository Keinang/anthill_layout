<%= form_for(item) do |f| -%>
    <% content = item.get_activated.content rescue nil %>
    <%= render_notification(item) -%>
    <%= render_field_tag(:text_area_tag, :content, content, true) unless is_new? -%>
    <%= render_json(content, '.json-view') unless content.nil? %>
    <%= render_checkbox(f, :publish) -%>

    <%= render 'author/author/item', f: f -%>

    <%= render_collection(f, 'Type', {
                                   id: :site_type_id,
                                   collection: types,
                                   index: :id,
                                   value: :name
                           }) -%>

    <%= render_activated_version(f) -%>
    <%= render 'select_widgets' unless is_new? %>
    <div class="panel-footer m-20">
        <%= render_submit(f) -%>
    </div>
<% end -%>