<%= form_for(item) do |f| %>

    <%= render_notification(item) %>
    <%= render_text(:site_storage, item.author_site_storage.try(:key)) %>
    <%= render_text_area(f, :content) %>
    <%= render_json( item.content, '.json-view') %>
    <%= render_checkbox(f, :activated) %>
    <div class="panel-footer m-20">
        <%= cancel_button -%>
        <%= render_submit(f) -%>
    </div>

<% end %>
