<h1>Listing <%= controller_name.humanize %></h1>

<div class="content">

  <%= link_to 'New Widget', new_author_widget_path %>

  <table>
    <thead>
    <tr>
      <th><%= link_to 'Name', order: @order %></th>
      <th>Description</th>
      <th>Icon</th>
      <th>Size</th>
      <th>Category</th>
      <th>Resource</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @author_widgets.each do |author_widget| %>
        <tr>
          <td><%= author_widget.name %></td>
          <td title="<%= author_widget.description %>"><%= truncate(author_widget.description, length: 150, separator: ' ') %></td>
          <td><%= image_tag author_widget.thumbnail %></td>
          <td><%= author_widget.width %> x <%= author_widget.height %></td>
          <td><%= author_widget.category %></td>
          <td><%= author_widget.resource %></td>
          <td><%= link_to 'Show', author_widget %></td>
          <td><%= link_to 'Edit', edit_author_widget_path(author_widget) %></td>
          <td><%= link_to 'Destroy', author_widget, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>