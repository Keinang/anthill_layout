<%= form_for(@author_widget) do |f| %>
    <%= render_notification(@author_widget) %>
    <%= render_text_field(f, :resource) %>
    <%= render_text_field(f, :name) %>
    <%= render_text_area(f, :description) %>
    <%= render_text_area(f, :thumbnail) %>
    <%= render_number_field(f, :width) %>
    <%= render_number_field(f, :height) %>
    <%= render_submit(f) %>
<% end %>
