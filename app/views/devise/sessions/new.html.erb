<div class="col-lg-3"></div>
<div class="col-lg-6">
    <div class="panel panel-default login">
        <div class="panel-heading"><%= t('login') %></div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="panel-body">
                <%= devise_error_messages! %>
                <div class="input-group">
                    <%= f.label :email, class: 'input-group-addon text-left' %>
                    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                </div>
                <div class="input-group">
                    <%= f.label :password, class: 'input-group-addon text-left' %>
                    <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
                </div>
                <% if devise_mapping.rememberable? -%>
                    <div class="btn btn-default pull-left">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me, class: 'pointer text-left f-400' %>
                    </div>
                <% end -%>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-lg-2 pull-left">
                        <%= f.submit t('login'), class: 'btn btn-info' %>
                    </div>
                    <div class="col-lg-10 pull-right">
                        <%= render 'devise/shared/links' %>
                    </div>
                </div>
                <%= render 'devise/shared/omniauth' %>
            </div>
        <% end %>
    </div>
</div>